<h2>Create a new drone</h2>
<a href="/" class="btn btn-secondary">Back</a>
<form action="/drones/create" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="form-group">
        <label for="propellers">Propellers</label>
        <input type="number" class="form-control" id="propellers" name="propellers">
    </div>
    <div class="form-group">
        <label for="maxSpeed">Max Speed</label>
        <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>