<h2>Update the drone</h2>
<a href="/" class="btn btn-secondary">Back</a>
<form action="/drones/{{drone._id}}/edit" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{drone.name}}">
    </div>
    <div class="form-group">
        <label for="propellers">Propellers</label>
        <input type="number" class="form-control" id="propellers" name="propellers" value="{{drone.propellers}}">
    </div>
    <div class="form-group">
        <label for="maxSpeed">Max Speed</label>
        <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{drone.maxSpeed}}">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>